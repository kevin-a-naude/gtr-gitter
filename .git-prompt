#!/bin/bash

if [ -f "$HOME/gtr" ]; then
    GTR_LOADING="TRUE"
    . "$HOME/gtr"
    GTR_LOADING=""

    function get_git_branch() {
        getGIT
        getBranch
        if [ x"$BRANCH" != x"" ]; then
            echo ":$BRANCH"
        fi
    }

    DARKRED="\[\e[0;31m\]"
    DARKGREEN="\[\e[0;32m\]"
    BROWN="\[\e[0;33m\]"
    DARKBLUE="\[\e[0;34m\]"
    DARKPURPLE="\[\e[0;35m\]"
    DARKCYAN="\[\e[0;36m\]"
    DARKGREY="\[\e[0;37m\]"

    RED="\[\e[1;31m\]"
    GREEN="\[\e[1;32m\]"
    YELLOW="\[\e[1;33m\]"
    BLUE="\[\e[1;34m\]"
    PURPLE="\[\e[1;35m\]"
    CYAN="\[\e[1;36m\]"
    WHITE="\[\e[0;37m\]"
    BRIGHT="\[\e[1;37m\]"
    ENDCOLOR="\[\e[m\]"

    PS1="$BLUE\# $DARKRED\u@\h $DARKGREEN\w$BROWN\$(get_git_branch)$ENDCOLOR\$ "
fi
